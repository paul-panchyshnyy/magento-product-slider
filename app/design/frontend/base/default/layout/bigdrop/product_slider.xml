<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem" ifconfig="product_sliders/settings/add_slick_js">
                <type>js</type>
                <script>bigdrop/product_slider/slick.min.js</script>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <script>js/bigdrop/product_slider/slider.js</script>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <script>css/bigdrop/product_slider/slick.css</script>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <script>css/bigdrop/product_slider/slick-theme.css</script>
            </action>
        </reference>
    </default>
</layout>